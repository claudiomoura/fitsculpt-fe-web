generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

enum SubscriptionPlan {
  FREE
  PRO
}

model User {
  id                      String                   @id @default(cuid())
  email                   String                   @unique
  passwordHash            String?
  name                    String?
  provider                String                   @default("email")
  role                    Role                     @default(USER)
  subscriptionPlan        SubscriptionPlan         @default(FREE)
  isBlocked               Boolean                  @default(false)
  emailVerifiedAt         DateTime?
  lastLoginAt             DateTime?
  deletedAt               DateTime?
  profile                 UserProfile?
  workouts                Workout[]
  authProviders           AuthProvider[]
  emailVerificationTokens EmailVerificationToken[]
  createdAt               DateTime                 @default(now())
  updatedAt               DateTime                 @updatedAt

  // AÃ‘ADIR ESTO:
  feedPosts  FeedPost[]
  aiUsages   AiUsage[]
  aiContents AiContent[]
}

model Workout {
  id          String    @id @default(cuid())
  name        String
  notes       String?
  scheduledAt DateTime?
  durationMin Int?
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([userId])
}

model Exercise {
  id               String   @id @default(cuid())
  name             String   @unique
  equipment        String?
  primaryMuscles   String[] @default([])
  secondaryMuscles String[] @default([])
  description      String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model UserProfile {
  id        String   @id @default(cuid())
  userId    String   @unique
  profile   Json?
  tracking  Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model AuthProvider {
  id             String   @id @default(cuid())
  userId         String
  provider       String
  providerUserId String
  createdAt      DateTime @default(now())
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerUserId])
  @@index([userId])
}

model EmailVerificationToken {
  id        String   @id @default(cuid())
  userId    String
  tokenHash String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model SignupAttempt {
  id        String   @id @default(cuid())
  email     String?
  ipAddress String?
  success   Boolean  @default(false)
  createdAt DateTime @default(now())
}

model OAuthState {
  id        String   @id @default(cuid())
  provider  String
  stateHash String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
}

model FeedPost {
  id        String   @id @default(cuid())
  userId    String
  title     String
  summary   String
  type      String   @default("summary")
  metadata  Json?
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model AiPromptCache {
  id         String   @id @default(cuid())
  key        String   @unique
  type       String
  payload    Json
  createdAt  DateTime @default(now())
  lastUsedAt DateTime @default(now())
}

model AiUsage {
  id        String   @id @default(cuid())
  userId    String
  date      String
  count     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date])
  @@index([userId])
}

model AiContent {
  id        String   @id @default(cuid())
  userId    String
  type      String
  source    String
  payload   Json
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}
