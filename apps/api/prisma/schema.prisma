generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String           @id @default(cuid())
  email        String           @unique
  passwordHash String?
  name         String?
  provider     String           @default("email")
  role         Role             @default(USER)
  plan         SubscriptionPlan @default(FREE) @map("subscriptionPlan")

  stripeCustomerId String? @unique

  stripeSubscriptionId    String?                  @unique @db.VarChar(255)
  subscriptionStatus      String?
  currentPeriodEnd        DateTime?
  aiTokenBalance          Int                      @default(0)
  aiTokenMonthlyAllowance Int                      @default(0)
  aiTokenRenewalAt        DateTime?
  aiTokenResetAt          DateTime?
  isBlocked               Boolean                  @default(false)
  emailVerifiedAt         DateTime?
  lastLoginAt             DateTime?
  deletedAt               DateTime?
  createdAt               DateTime                 @default(now())
  updatedAt               DateTime                 @updatedAt
  aiContents              AiContent[]
  aiUsages                AiUsage[]
  aiUsageLogs             AiUsageLog[]
  authProviders           AuthProvider[]
  emailVerificationTokens EmailVerificationToken[]
  feedPosts               FeedPost[]
  profile                 UserProfile?
  userFoods               UserFood[]
  workouts                Workout[]
  nutritionPlans          NutritionPlan[]
  trainingPlans           TrainingPlan[]
  gymMemberships          GymMembership[]

  @@index([stripeCustomerId])
  @@index([stripeSubscriptionId])
}

model Workout {
  id          String    @id @default(cuid())
  name        String
  notes       String?
  scheduledAt DateTime?
  durationMin Int?
  userId      String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  exercises   WorkoutExercise[]
  sessions    WorkoutSession[]

  @@index([userId])
}

model Exercise {
  id                    String   @id @default(cuid())
  sourceId              String?  @unique
  name                  String
  source                String?
  equipment             String?
  imageUrls             String[] @default([])
  description           String?
  imageUrl              String?
  mediaUrl              String?
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
  isUserCreated         Boolean  @default(false)
  mainMuscleGroup       String
  secondaryMuscleGroups String[]
  slug                  String   @unique
  technique             String?
  tips                  String?

  @@unique([source, sourceId])
  @@index([name])
  @@index([source, sourceId])
}

model UserProfile {
  id        String   @id @default(cuid())
  userId    String   @unique
  profile   Json?
  tracking  Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model UserFood {
  id        String   @id @default(cuid())
  userId    String
  name      String
  calories  Float
  protein   Float
  carbs     Float
  fat       Float
  unit      String
  brand     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Recipe {
  id          String             @id @default(cuid())
  name        String             @unique
  description String?
  calories    Float
  protein     Float
  carbs       Float
  fat         Float
  photoUrl    String?
  steps       String[]
  createdAt   DateTime           @default(now())
  updatedAt   DateTime           @updatedAt
  ingredients RecipeIngredient[]
}

model RecipeIngredient {
  id       String @id @default(cuid())
  recipeId String
  name     String
  grams    Float
  recipe   Recipe @relation(fields: [recipeId], references: [id], onDelete: Cascade)

  @@index([recipeId])
}

model NutritionPlan {
  id            String         @id @default(cuid())
  userId        String
  title         String
  dailyCalories Float
  proteinG      Float
  fatG          Float
  carbsG        Float
  startDate     DateTime
  daysCount     Int
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  user          User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  days          NutritionDay[]

  @@index([userId])
  @@unique([userId, startDate, daysCount])
}

model NutritionDay {
  id       String          @id @default(cuid())
  planId   String
  date     DateTime
  dayLabel String
  order    Int
  plan     NutritionPlan   @relation(fields: [planId], references: [id], onDelete: Cascade)
  meals    NutritionMeal[]

  @@index([planId])
}

model NutritionMeal {
  id          String               @id @default(cuid())
  dayId       String
  type        String
  title       String
  description String?
  calories    Float
  protein     Float
  carbs       Float
  fats        Float
  day         NutritionDay         @relation(fields: [dayId], references: [id], onDelete: Cascade)
  ingredients NutritionIngredient[]

  @@index([dayId])
}

model NutritionIngredient {
  id     String        @id @default(cuid())
  mealId String
  name   String
  grams  Float
  meal   NutritionMeal @relation(fields: [mealId], references: [id], onDelete: Cascade)

  @@index([mealId])
}

model TrainingPlan {
  id          String         @id @default(cuid())
  userId      String
  title       String
  notes       String?
  goal        String
  level       String
  daysPerWeek Int
  focus       String
  equipment   String
  startDate   DateTime
  daysCount   Int
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
  user        User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  days        TrainingDay[]
  gymAssignments GymMembership[] @relation("GymMemberAssignedTrainingPlan")

  @@index([userId])
  @@unique([userId, startDate, daysCount])
}

model TrainingDay {
  id       String             @id @default(cuid())
  planId   String
  date     DateTime
  label    String
  focus    String
  duration Int
  order    Int
  plan     TrainingPlan       @relation(fields: [planId], references: [id], onDelete: Cascade)
  exercises TrainingExercise[]

  @@index([planId])
}

model TrainingExercise {
  id         String      @id @default(cuid())
  dayId      String
  exerciseId String?
  imageUrl   String?
  name       String
  sets       Int
  reps       String?
  tempo      String?
  rest       Int?
  notes      String?
  day        TrainingDay @relation(fields: [dayId], references: [id], onDelete: Cascade)

  @@index([dayId])
  @@index([exerciseId])
}

model WorkoutExercise {
  id          String   @id @default(cuid())
  workoutId   String
  exerciseId  String?
  name        String
  sets        String?
  reps        String?
  restSeconds Int?
  notes       String?
  order       Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  workout     Workout  @relation(fields: [workoutId], references: [id], onDelete: Cascade)

  @@index([workoutId])
}

model WorkoutSession {
  id         String              @id @default(cuid())
  workoutId  String
  userId     String
  startedAt  DateTime
  finishedAt DateTime?
  createdAt  DateTime            @default(now())
  updatedAt  DateTime            @updatedAt
  workout    Workout             @relation(fields: [workoutId], references: [id], onDelete: Cascade)
  entries    WorkoutSessionEntry[]

  @@index([workoutId])
  @@index([userId])
}

model WorkoutSessionEntry {
  id          String         @id @default(cuid())
  sessionId   String
  exercise    String
  sets        Int
  reps        Int
  loadKg      Float?
  rpe         Int?
  createdAt   DateTime       @default(now())
  session     WorkoutSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@index([sessionId])
}

model AuthProvider {
  id             String   @id @default(cuid())
  userId         String
  provider       String
  providerUserId String
  createdAt      DateTime @default(now())
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerUserId])
  @@index([userId])
}

model EmailVerificationToken {
  id        String   @id @default(cuid())
  userId    String
  tokenHash String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model SignupAttempt {
  id        String   @id @default(cuid())
  email     String?
  ipAddress String?
  success   Boolean  @default(false)
  createdAt DateTime @default(now())
}

model OAuthState {
  id        String   @id @default(cuid())
  provider  String
  stateHash String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
}

model FeedPost {
  id        String   @id @default(cuid())
  userId    String
  title     String
  summary   String
  type      String   @default("summary")
  metadata  Json?
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model AiPromptCache {
  id         String   @id @default(cuid())
  key        String   @unique
  type       String
  payload    Json
  createdAt  DateTime @default(now())
  lastUsedAt DateTime @default(now())
}

model AiUsage {
  id        String   @id @default(cuid())
  userId    String
  date      String
  count     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date])
  @@index([userId])
}

model AiUsageLog {
  id               String   @id @default(cuid())
  userId           String
  feature          String
  provider         String?
  model            String
  mode             String   @default("AI")
  fallbackReason   String?
  promptTokens     Int      @default(0)
  completionTokens Int      @default(0)
  totalTokens      Int      @default(0)
  costCents        Int      @default(0)
  currency         String   @default("usd")
  requestId        String?
  meta             Json?
  createdAt        DateTime @default(now())
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([createdAt])
}

model AiContent {
  id        String   @id @default(cuid())
  userId    String
  type      String
  source    String
  payload   Json
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Gym {
  id          String          @id @default(cuid())
  name        String
  code        String          @unique
  activationCode String       @unique
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  memberships GymMembership[]

  @@index([name])
}

model GymMembership {
  id        String              @id @default(cuid())
  gymId     String
  userId    String
  status    GymMembershipStatus
  role      GymRole
  assignedTrainingPlanId String?
  createdAt DateTime            @default(now())
  updatedAt DateTime            @updatedAt
  gym       Gym                 @relation(fields: [gymId], references: [id], onDelete: Cascade)
  user      User                @relation(fields: [userId], references: [id], onDelete: Cascade)
  assignedTrainingPlan TrainingPlan? @relation("GymMemberAssignedTrainingPlan", fields: [assignedTrainingPlanId], references: [id], onDelete: SetNull)

  @@unique([gymId, userId])
  @@index([gymId, status])
  @@index([userId, status])
  @@index([assignedTrainingPlanId])
}

enum Role {
  USER
  ADMIN
}

enum SubscriptionPlan {
  FREE
  STRENGTH_AI
  NUTRI_AI
  PRO
}

enum GymMembershipStatus {
  PENDING
  ACTIVE
  REJECTED
}

enum GymRole {
  ADMIN
  TRAINER
  MEMBER
}
