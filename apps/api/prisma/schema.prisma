generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String           @id @default(cuid())
  email        String           @unique
  passwordHash String?
  name         String?
  provider     String           @default("email")
  role         Role             @default(USER)
  plan         SubscriptionPlan @default(FREE) @map("subscriptionPlan")

  stripeCustomerId String? @unique

  stripeSubscriptionId    String?                  @unique @db.VarChar(255)
  subscriptionStatus      String?
  currentPeriodEnd        DateTime?
  aiTokenBalance          Int                      @default(0)
  aiTokenMonthlyAllowance Int                      @default(0)
  aiTokenRenewalAt        DateTime?
  aiTokenResetAt          DateTime?
  isBlocked               Boolean                  @default(false)
  emailVerifiedAt         DateTime?
  lastLoginAt             DateTime?
  deletedAt               DateTime?
  createdAt               DateTime                 @default(now())
  updatedAt               DateTime                 @updatedAt
  aiContents              AiContent[]
  aiUsages                AiUsage[]
  aiUsageLogs             AiUsageLog[]
  authProviders           AuthProvider[]
  emailVerificationTokens EmailVerificationToken[]
  feedPosts               FeedPost[]
  profile                 UserProfile?
  userFoods               UserFood[]
  workouts                Workout[]

  @@index([stripeCustomerId])
  @@index([stripeSubscriptionId])
}

model Workout {
  id          String    @id @default(cuid())
  name        String
  notes       String?
  scheduledAt DateTime?
  durationMin Int?
  userId      String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Exercise {
  id                    String   @id @default(cuid())
  name                  String
  equipment             String?
  description           String?
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
  isUserCreated         Boolean  @default(false)
  mainMuscleGroup       String
  secondaryMuscleGroups String[]
  slug                  String   @unique
  technique             String?
  tips                  String?
}

model UserProfile {
  id        String   @id @default(cuid())
  userId    String   @unique
  profile   Json?
  tracking  Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model UserFood {
  id        String   @id @default(cuid())
  userId    String
  name      String
  calories  Float
  protein   Float
  carbs     Float
  fat       Float
  unit      String
  brand     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Recipe {
  id          String             @id @default(cuid())
  name        String             @unique
  description String?
  calories    Float
  protein     Float
  carbs       Float
  fat         Float
  photoUrl    String?
  steps       String[]
  createdAt   DateTime           @default(now())
  updatedAt   DateTime           @updatedAt
  ingredients RecipeIngredient[]
}

model RecipeIngredient {
  id       String @id @default(cuid())
  recipeId String
  name     String
  grams    Float
  recipe   Recipe @relation(fields: [recipeId], references: [id], onDelete: Cascade)

  @@index([recipeId])
}

model AuthProvider {
  id             String   @id @default(cuid())
  userId         String
  provider       String
  providerUserId String
  createdAt      DateTime @default(now())
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerUserId])
  @@index([userId])
}

model EmailVerificationToken {
  id        String   @id @default(cuid())
  userId    String
  tokenHash String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model SignupAttempt {
  id        String   @id @default(cuid())
  email     String?
  ipAddress String?
  success   Boolean  @default(false)
  createdAt DateTime @default(now())
}

model OAuthState {
  id        String   @id @default(cuid())
  provider  String
  stateHash String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
}

model FeedPost {
  id        String   @id @default(cuid())
  userId    String
  title     String
  summary   String
  type      String   @default("summary")
  metadata  Json?
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model AiPromptCache {
  id         String   @id @default(cuid())
  key        String   @unique
  type       String
  payload    Json
  createdAt  DateTime @default(now())
  lastUsedAt DateTime @default(now())
}

model AiUsage {
  id        String   @id @default(cuid())
  userId    String
  date      String
  count     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date])
  @@index([userId])
}

model AiUsageLog {
  id               String   @id @default(cuid())
  userId           String
  feature          String
  model            String
  promptTokens     Int      @default(0)
  completionTokens Int      @default(0)
  totalTokens      Int      @default(0)
  costCents        Int      @default(0)
  currency         String   @default("usd")
  requestId        String?
  meta             Json?
  createdAt        DateTime @default(now())
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([createdAt])
}

model AiContent {
  id        String   @id @default(cuid())
  userId    String
  type      String
  source    String
  payload   Json
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

enum Role {
  USER
  ADMIN
}

enum SubscriptionPlan {
  FREE
  PRO
}
